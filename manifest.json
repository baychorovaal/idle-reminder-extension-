{
  "manifest_version": 3,
  "name": "Idle Reminder",
  "version": "1.1",
  "description": "Shows an image if the user is inactive for a selected time",

  "permissions": ["storage"],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["image.png"],
      "matches": ["<all_urls>"]
    }
  ]
}